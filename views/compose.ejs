<%- include("partials/header") -%>

<h1> <%= pageTitle %> </h1>
<form class="blog-form" action="/compose" method="post">

  <div class="form-group">
    <label for="inputTitle">Post Title</label>
    <input type="text" class="form-control" name="postTitle" id="inputTitle" aria-describedby="titleDetails" placeholder="Enter your Title">
    <small id="titleDetails" class="form-text text-muted">Try making it as descriptive as possible.</small>
  </div>

  <div class="form-group">
    <label for="inputPost">Blog Post</label>
    <textarea id="inputPost" class="form-control" name="blogEntry" rows="8" cols="80" placeholder="New Blog Post"></textarea>
  </div>

  <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

<%- include("partials/footer") -%>
